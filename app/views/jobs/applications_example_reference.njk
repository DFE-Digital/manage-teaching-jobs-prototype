{% extends "layout.njk" %}

{% set primaryNavId = 'jobs' %}
{% set subNavId = 'applications' %}

{% set title = 'Enter a reference' %}

{% block beforeContent %}
  <a class="govuk-back-link" href="javascript:window.history.back()">Back</a>
{% endblock %}

{% block content %}

  {{ govukNotificationBanner({
    html: "<h2 class=\"govuk-heading-m\">"+flash+"</h2>",
    type: "success",
    icon: false
  }) if flash and flash.length }}


    <div class="govuk-grid-row">
        
        <div class="govuk-grid-column-full">

            <span class="govuk-caption-m">Reference</span>

            <h1 class="govuk-heading-l govuk-!-margin-bottom-5 govuk-!-margin-top-0">
                Add a reference
            </h1>

        </div>

        <div id="application">
        
            <div class="govuk-grid-column-two-thirds">

                <form method="post">

                    <div class="govuk-form-group">
                        <label class="govuk-label" for="referee-name">
                            Referee name
                        </label>
                        <input class="govuk-input" id="referee-name" name="refereeName" type="text">
                    </div>

                    <div class="govuk-form-group">
                        <fieldset class="govuk-fieldset" aria-describedby="contact-hint">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                            <h1 class="govuk-fieldset__heading">
                                Would you like to upload a reference or enter details manually?
                            </h1>
                            </legend>
                            <div id="contact-hint" class="govuk-hint">
                                Select one option
                            </div>
                            <div class="govuk-radios" data-module="govuk-radios">
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="contact" name="contact" type="radio" value="email" data-aria-controls="conditional-contact">
                                <label class="govuk-label govuk-radios__label" for="contact">
                                    Upload a reference
                                </label>
                            </div>
                            <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-contact">
                                
                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="file-upload-1">
                                        Upload a file (optional)
                                    </label>
                                    <input class="govuk-file-upload" id="file-upload-1" name="fileUpload1" type="file">
                                </div>
                                
                            </div>
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="contact-2" name="contact" type="radio" value="phone" data-aria-controls="conditional-contact-2">
                                <label class="govuk-label govuk-radios__label" for="contact-2">
                                Enter details manually
                                </label>
                            </div>
                            <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-contact-2">
                               
                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="referee-job">
                                        Referee job title
                                    </label>
                                    <input class="govuk-input" id="referee-job" name="refereeJob" type="text">
                                </div>

                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="referee-organisation">
                                        Referee organisaton
                                    </label>
                                    <input class="govuk-input" id="referee-organisation" name="refereeOrganisation" type="text">
                                </div>

                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="referee-relationship">
                                        Referee relationship to applicant
                                    </label>
                                    <input class="govuk-input" id="referee-relationship" name="refereeRelationship" type="text">
                                </div>

                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="referee-email">
                                        Referee email address
                                    </label>
                                    <input class="govuk-input" spellcheck="false" id="referee-email" name="refereeEmail" type="text">
                                </div>

                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="referee-number">
                                        Referee phone number
                                    </label>
                                    <input class="govuk-input govuk-input--width-20" id="referee-number" name="refereeNumber" type="tel" autocomplete="tel">
                                </div>
                                
                            </div>
                            
                            
                            </div>
                        </fieldset>
                        </div>

                    

                    

                
                    <button type="submit" class="govuk-button govuk-!-margin-top-3" data-module="govuk-button">
                        Save reference
                    </button>

                </form>
           
                  
                    
            </div>

            <div class="govuk-grid-column-one-third">

                
                <div class="govuk-summary-card">
                    <div class="govuk-summary-card__title-wrapper">
                        <h2 class="govuk-summary-card__title">
                            Notes
                        </h2>
                        <ul class="govuk-summary-card__actions">
                            <li class="govuk-summary-card__action">
                                <a class="govuk-link govuk-link--no-visited-state" href="#">Edit notes</a>
                            </li>
                            
                        </ul>
                    </div>
                    <div class="govuk-summary-card__content">

                        <p class="govuk-!-margin-bottom-0">
                            Great work experience, I think we should shortlist
                        </p>
                        <p class="govuk-body-s govuk-!-margin-top-1">
                            By Bob Smith, 2024-06-26 12:04:49 +0100
                        </p>

                        <hr class="govuk-section-break govuk-section-break--s govuk-section-break--visible govuk-!-margin-bottom-3">

                        <p class="govuk-!-margin-bottom-0">
                        Also like the personal statement
                        </p>
                        <p class="govuk-body-s govuk-!-margin-top-1">
                            By Rachel Brown, 2024-06-28 16:32:22 +0100
                        </p>

                        <hr class="govuk-section-break govuk-section-break--s govuk-section-break--visible">


                        <div class="govuk-form-group govuk-character-count govuk-!-margin-top-3" data-module="govuk-character-count" data-maxlength="150">
                            <label class="govuk-label" for="label-as-page-heading">
                                Add a note
                            </label>
                            <textarea class="govuk-textarea govuk-js-character-count" id="label-as-page-heading" name="labelAsPageHeading" rows="5" aria-describedby="label-as-page-heading-info"></textarea>
                            <div id="label-as-page-heading-info" class="govuk-hint govuk-character-count__message govuk-body-s">
                                You have 150 characters remaining
                            </div>
                        </div>

                        <button type="submit" class="govuk-button" data-module="govuk-button">
                            Save note
                        </button>

                    </div>
                </div>

            </div>

        </div>

       

    </div>
    
    

  

{% endblock %}
