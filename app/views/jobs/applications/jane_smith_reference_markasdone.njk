{% extends "layout.njk" %}

{% set primaryNavId = 'jobs' %}
{% set subNavId = 'applications' %}

{% block beforeContent %}
  <a class="govuk-back-link" href="javascript:window.history.back()">Back</a>
{% endblock %}

{% block content %}

  {{ govukNotificationBanner({
    html: "<h2 class=\"govuk-heading-m\">"+flash+"</h2>",
    type: "success",
    icon: false
  }) if flash and flash.length }}


<div class="govuk-grid-row">
    
    <div class="govuk-grid-column-two-thirds">

        <span class="govuk-caption-l">Update reference status</span>


        <form method="post">

        <div class="govuk-form-group">
        <fieldset class="govuk-fieldset" aria-describedby="countries-hint">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">
                Is Jane Smith's reference satisfactory?
            </h1>
            </legend>
<br>


     <div class="govuk-form-group">
  <fieldset class="govuk-fieldset">

    <div class="govuk-radios" data-module="govuk-radios">
      <div class="govuk-radios__item">
        <input class="govuk-radios__input" id="whereDoYouLive" name="whereDoYouLive" type="radio" value="england">
        <label class="govuk-label govuk-radios__label" for="whereDoYouLive">
          Yes
             <div id="signIn-hint" class="govuk-hint">
    This reference will be marked as complete
    </div>
        </label>
        
      </div>
      
            <div class="govuk-radios__item">
        <input class="govuk-radios__input" id="whereDoYouLive-2" name="whereDoYouLive" type="radio" value="scotland">
        <label class="govuk-label govuk-radios__label" for="whereDoYouLive-2">
          No

             <div id="signIn-hint" class="govuk-hint">
This reference will remain as recieved.
    </div>
        </label>
      </div>
        </fieldset>
</div>

<div class="govuk-button-group">
  <a href="/jobs/applications/jane_smith_reference_completed_manual" role="button" class="govuk-button" data-module="govuk-button">
    Save and continue
  </a>
  <a class="govuk-link" href="#">Cancel</a>
</div>


    </div>

</div>
  

{% endblock %}